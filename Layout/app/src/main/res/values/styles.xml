<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="textInput">
        <item name="android:layout_width">@dimen/input_width</item>
        <item name="android:layout_height">@dimen/input_height</item>
    </style>

    <style name="textLabel">
        <item name="android:layout_width">@dimen/label_width</item>
        <item name="android:layout_height">@dimen/label_height</item>
    </style>

    <style name="layoutStyle">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
    </style>

</resources>
